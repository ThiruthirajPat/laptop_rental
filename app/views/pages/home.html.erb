<div class="row mx-1">
  <% Laptop.last(6).each do |laptop| %>
  <div class="col-12 colsm-6 col-md-4 mb-3">   
    <div class="card-category" data-aos="zoom-in" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= laptop.photo.attached? ? cl_image_path(laptop.photo.key) : asset_path('laptop_background.jpeg') %>)">
    </div>
    <div class="d-flex justify-content-around">
      <div class="mt-3">
        <h6><%= laptop.brand %> <%= laptop.model %></h6>
      </div>
      <div class="mt-3">
        <h6>MUR <%= laptop.rental_rate %>/Day</h6>
      </div>
      <div class="mx-1 my-2">
        <%= link_to "View", laptop_path(laptop), class:'text-decoration-none btn btn-warning btn-sm' %>
      </div>

    </div>
    
  </div>
  <% end %>
</div>

