<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Create a new laptop</h3>
        <%= simple_form_for @laptop do |f| %>
          <%= f.input :brand, placeholder: 'Laptop Brand' %>
          <%= f.input :model, placeholder: 'Laptop Model' %>
          <%= f.input :operating_system, placeholder: 'Laptop OS' %>
          <%= f.date_field :date_manufacture, placeholder: 'Laptop DOM' %>
          <%= f.input :collection_point, placeholder: 'Laptop collection_point' %>
          <%= f.input :rental_rate, placeholder: 'Laptop rental_rate' %>
          <%= f.input :photo, as: :file %>
          <%= f.submit class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
