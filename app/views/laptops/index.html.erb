<div class="d-flex justify-content-center mt-5">
  <h1>Discover all our laptops</h1>  
</div>

<div class="container">
  <%= form_tag laptops_path, method: :get do %>
    <div class="search-form-control form-group">
      <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a laptop"
      %>
      <br>
      <%= submit_tag "Search", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

<div class="container">
  <div class="row">
    <% @laptops.each do |laptop| %>
      <div class="col-12 colsm-6 col-md-4 mb-3">   
        <div class="card-category" data-aos="zoom-in" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= laptop.photo.attached? ? cl_image_path(laptop.photo.key) : asset_path('laptop_background.jpeg') %>)">
      </div>
      <div class="d-flex justify-content-around">
        <div class="mt-3">
          <h5><%= laptop.brand %> <%= laptop.model %></h5>
        </div>
        <div class="mx-1 my-2">
          <%= link_to "View", laptop_path(laptop), class:'text-decoration-none btn btn-outline-warning btn-sm' %>
        </div>
      </div>
     </div>
    <% end %>
  </div>
</div>

<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center">
    <h1>Discover all our laptops</h1>
  </div>
</div>

<div class="container py-5">
    <% @laptops.each do |laptop| %>

        <div class="card-product p-2">
          <%= image_tag laptop.photo.attached? ? cl_image_path(laptop.photo.key) : asset_path('laptop_background.jpg') %>
            <div class="card-product-infos">
              <h5><strong><%= laptop.brand %> <%= laptop.model %></strong></h5>
              <h6><strong>Operating System:</strong> <%= laptop.operating_system %></h6>
              <h6><strong>Date of Manufacture:</strong> <%= laptop.date_manufacture.strftime("%B %d, %Y") %></h6>
              <h6><strong>Daily Rental Rate (MUR):</strong> <%= laptop.rental_rate %></h6>
              <h6><strong>Collection Point:</strong> <%= laptop.collection_point %></h6>
              <div class="my-5">
                <%= link_to "View", laptop_path(laptop), class:'text-decoration-none btn btn-warning' %>
              </div>
            </div>
        </div>
        <br>

    <% end %>
</div>


