<div class="d-flex justify-content-center mt-5">
  <h1>Discover all our laptops</h1>  
</div>

<div class="row">
  <% @laptops.each do |laptop| %>
  <div class="col-12 colsm-6 col-md-4 mb-3">   
    <div class="card-category" data-aos="zoom-in" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(/assets/laptop_background.jpg)">
    </div>
    <div class="d-flex justify-content-around">
      <div class="mt-3">
        <h5><%= laptop.brand %> <%= laptop.model %></h5>
      </div>
      <div class="mx-1 my-2">
        <%= link_to "View", laptop_path(laptop), class:'text-decoration-none btn btn-outline-warning btn-sm' %>
      </div>
    </div>
    
  </div>
  <% end %>
</div>

<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center">
    <h1>Discover all our laptops</h1>
  </div>
</div>

<div class="container py-5">
  <% @laptops.each do |laptop| %>
    <%= link_to laptop_path(laptop), class:'text-decoration-none' do %>
      <div class="card-product">
        <img src=<%= laptop.photo.attached? ? cl_image_path(laptop.photo.key) : asset_path('laptop_background.jpg') %>/>
          <div class="card-product-infos">
            <h2>Brand <%= laptop.brand %></h2>
            <p>Model <%= laptop.model %></p>
            <p>Operating System <%= laptop.operating_system %></p>
            <p>Date Manufacture <%= laptop.date_manufacture %></p>
            <p>Collection Point <%= laptop.collection_point %></p>
          </div>
      </div>
      <br>
    <% end %>
  <% end %>
</div>
