<div class="d-flex justify-content-center">

    <div class="col-6 text-center">
    <h1>Want to rent this <%= @laptop.brand %> Laptop?</h1>
        <div class="card">
          <div class="card-image"></div>
          <div class="card-content">
            <%= image_tag ("laptop_background.jpeg"), size:"100x400", :class => "card-img-top" %>
            <div class="flat-card-title">

                <div class="">
                  <h5>Model: <%= @laptop.model %></h5>
                  <h5>Operating System: <%= @laptop.operating_system %></h5>
                  <h5>Date of Manufacturing: <%= @laptop.date_manufacture %></h5>
                  <h5>Daily Rental Rate: <%= @laptop.rental_rate %> MUR</h5>
                </div>
                <div class="">

                </div>
            </div>
          </div>
        </div>
      </div>
<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Create a Booking</h3>
        <%= simple_form_for [@laptop, @booking] do |f| %>
          <%= f.date_field :date_from, placeholder: 'Start Date' %>
          <%= f.date_field :date_to, placeholder: 'End Date' %>
          <%= f.input :status, placeholder: 'Status' %>
          <%= f.submit class: 'btn btn-outline-primary' %>
        <% end %>
      </div>
      <%# <%= link_to "Back", laptop.bookings_path %>
    </div>
  </div>
</div>

</div>
